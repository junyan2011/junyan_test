extends layout

block page
  - var menu = 'index'
  a(href="/signup") Sign Up
  br
  a(href="/login") Log in
  br

block content
  if !ariticles
    | There's no published yet.
  else if (articles.length === 0)
    | There's no published content yet.
    a(href="/login") Log in
    | to post and publish.
  else
    each article, index in articles
      div
        h2
          a(href="/articles/#{article.slug}")= article.title

